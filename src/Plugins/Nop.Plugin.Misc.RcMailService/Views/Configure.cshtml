@model Nop.Plugin.Misc.RcMailService.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="RcMailService" asp-action="Configure" method="post">
	<section class="content">
		<div class="container-fluid">			
				<div class="card card-default">
					<div class="card-body">
						<div class="form-group row">
							<div class="col-md-3">
								<nop-label asp-for="ApplicationName" />
							</div>
							<div class="col-md-9">
								<nop-editor asp-for="ApplicationName" />
								<span asp-validation-for="ApplicationName"></span>
							</div>
						</div>
						<div class="form-group row" style="display: none">
							<div class="col-md-3">
								<nop-label asp-for="From" />
							</div>
							<div class="col-md-9">
								<nop-editor asp-for="From" />
								<span asp-validation-for="From"></span>
							</div>
						</div>
						<div class="form-group row">
							<div class="col-md-3">
								<nop-label asp-for="ServiceUrl" />
							</div>
							<div class="col-md-9">
								<nop-editor asp-for="ServiceUrl" />
								<span asp-validation-for="ServiceUrl"></span>
							</div>
						</div>
						<div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
						</div>
					</div>
				</div>			
		</div>
	</section>
</form>