@model Bau.Plugin.Optimization.Gurobi.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="OptimizationSolver" asp-action="Configure" method="post">
    <nop-cards id="optimization-solver-cards">
        <div class="content-header clearfix">
            <div class="float-right">
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="card card-default">
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="GurobiLicenceKey"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="GurobiLicenceKey"/>
                            <span asp-validation-for="GurobiLicenceKey"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="BaseUrl"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="BaseUrl"/>
                            <span asp-validation-for="BaseUrl"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="UseTestMode"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="UseTestMode"/>
                            <span asp-validation-for="UseTestMode"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nop-cards>
</form>