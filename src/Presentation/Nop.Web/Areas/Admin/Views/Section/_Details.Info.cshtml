@model Nop.Web.Areas.Admin.Models.Education.SectionModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="CourseId" />
        </div>
        <div class="col-md-9">
            <div class="form-text-row">@Model.CourseName</div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="SectionNumber" />
        </div>
        <div class="col-md-9">
            <div class="form-text-row">@Model.SectionNumber</div>
        </div>
    </div>
</div>