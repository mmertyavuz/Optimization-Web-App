@model Nop.Web.Areas.Admin.Models.Corporations.EducationalDepartmentModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Name" />
        </div>
        <div class="col-md-9"><div class="form-text-row">
                @Model.Name
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label class="col-form-label">
                    Code
                </label>
            </div>
        </div>
        <div class="col-md-9">
            <div class="form-text-row">
                @Model.Code
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Description" />
        </div>
        <div class="col-md-9"><div class="form-text-row">
                @Model.Description
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="FacultyId" />
        </div>
        <div class="col-md-9">
            <div class="form-text-row">
                <a href="/Admin/Faculty/Edit/@Model.FacultyId"> @Model.FacultyName</a>
            </div>
        </div>
    </div>
</div>