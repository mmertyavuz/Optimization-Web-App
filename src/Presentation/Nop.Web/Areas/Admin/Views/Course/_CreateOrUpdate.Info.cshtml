@model Nop.Web.Areas.Admin.Models.Education.CourseModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Name" />
        </div>
        <div class="col-md-9">
            <div class="form-text-row">
                @Model.Name
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Code" />
        </div>
        <div class="col-md-9">
            <div class="form-text-row">
                @Model.Code
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Description" />
        </div>
        <div class="col-md-9">
            <div class="form-text-row">
                @Model.Description
            </div>
        </div>
    </div>
    <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="EducationalDepartmentId" />
            </div>
            <div class="col-md-9">
                <div class="form-text-row">
                    <a href="/admin/educationaldepartment/edit/@Model.EducationalDepartmentId">@Model.EducationalDepartmentName</a>
                </div>
            </div>
        </div>
</div>