@model Nop.Web.Areas.Admin.Models.Education.SectionModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<input asp-for="CourseId" type="hidden" />

@if (ViewBag.RefreshPage == true)
{
    <script>
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default card-popup">
                        <div class="card-body">
                           <div class="form-group row">
                                <div class="col-sm-3">
                                    <nop-label asp-for="SectionNumber" />
                                </div>
                                <div class="col-sm-9">
                                    <nop-editor asp-for="SectionNumber" />
                                    <span asp-validation-for="SectionNumber"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>