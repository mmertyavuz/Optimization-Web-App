@model string

<input asp-for="@Model" class="form-control text-box single-line valid"/>

<script src="~/js/inputmask.js"></script>
<script src="~/js/jquery.inputmask.js"></script>

<script>
    $( document ).ready(function() {
        $('#@Html.IdFor(model => model)').inputmask({ "mask": "(999) 999-99-99", 'autoUnmask': true, 'removeMaskOnSubmit': true });
    });
</script>